# ==============================================
# INFRASTRUCTURE
# ==============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=solana_intel
POSTGRES_USER=admin
POSTGRES_PASSWORD=password

REDIS_HOST=localhost
REDIS_PORT=6379

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# ==============================================
# SOLANA NETWORK
# ==============================================
# RPC URL (Helius, Triton, Quicknode, etc.)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Helius API Key (Recommended for high-performance ingestion)
HELIUS_API_KEY=your_helius_key_here

# Geyser (Optional - for institutional grade latency)
SOLANA_GEYSER_URL=
SOLANA_GEYSER_TOKEN=

# Jito Block Engine (for bundle submission)
JITO_BLOCK_ENGINE_URL=https://mainnet.block-engine.jito.wtf

# ==============================================
# APPLICATION SETTINGS
# ==============================================
LOG_LEVEL=INFO
# Secret key for encrypting wallet private keys in database
KEY_ENCRYPTION_SECRET=change-me-in-production-random-string-at-least-32-chars

# ==============================================
# TRADING & RISK MANAGEMENT
# ==============================================
# Enable auto-execution of trades (DANGEROUS if True)
AUTO_EXECUTE=false

# Simulation mode (executes everything except the actual swap)
DRY_RUN=true

# Trading Capital (in SOL) used for risk calculations
TRADING_CAPITAL=100.0

# Max position size per trade (in SOL)
MAX_POSITION_SOL=10.0

# Max percentage of capital per trade (0.05 = 5%)
MAX_POSITION_SIZE_PCT=0.05

# Max daily drawdown allowed before circuit breaker trips (0.10 = 10%)
MAX_DAILY_DRAWDOWN_PCT=0.10

# Minimum confidence score (0.0-1.0) to trigger execution
MIN_CONFIDENCE=0.80

# ==============================================
# NOTIFICATIONS
# ==============================================
# Telegram Alerting
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
